.row
  .col-sm-1
  .col-sm-10

    %h3.content-header 動物図鑑
    .row
      .col-sm-10
      .col-sm-2
        = link_to '新規追加', new_animal_path, :class => 'btn btn-primary'

    .col-xs-12
      .box.box-primary
        .box-header
          .box.box-primary
            .box-header
              -# = search_form_for @search_animal, :url => {:action => 'index' } do |f|
              = search_form_for @search_animal do |f|
                .row
                  .col-sm-0.5
                    = f.label :name, Animal.human_attribute_name("name")
                  .col-sm-3.5
                    = f.search_field :name_cont , :class => "form-control"
                  .col-sm-2
                    = f.submit '検索', :class => 'btn btn-primary'

          　
        .box-body
          .alt-table-responsive
            %table.table.table-striped
              %thead
                %tr
                  %th.col-xs-1= sort_link(@search_animal, :name , Animal.human_attribute_name("name"))
                  %th.col-xs-1= sort_link(@search_animal, :binomial_name , Animal.human_attribute_name("binomial_name"))
                  %th.col-xs-1= sort_link(@search_animal, :animal_class , Animal.human_attribute_name("animal_class"))
                  %th.col-xs-1= sort_link(@search_animal, :animal_order , Animal.human_attribute_name("animal_order"))
                  %th.col-xs-1= sort_link(@search_animal, :animal_family , Animal.human_attribute_name("animal_family"))
                  %th.col-xs-1= sort_link(@search_animal, :animal_genus , Animal.human_attribute_name("animal_genus"))
                  -# %th.col-xs-1= sort_link(@search_animal, :animal_species , Animal.human_attribute_name("animal_species"))
                  %th.col-xs-1
                  %th.col-xs-1
              %tbody
                - @animals.each do |animal|
                  %tr
                    %td= animal.name
                    %td= animal.binomial_name
                    %td= animal.animal_class
                    %td= animal.animal_order
                    %td= animal.animal_family
                    %td= animal.animal_genus
                    -# %td= animal.animal_species
                    %td= link_to '詳細', animal, :class => 'btn btn-sm btn-primary center-block'
                    %td= link_to '編集', edit_animal_path(animal), :class => 'btn btn-sm btn-info center-block'
